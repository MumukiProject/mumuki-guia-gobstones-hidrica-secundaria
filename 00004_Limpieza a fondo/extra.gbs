procedure CerrarCompuertas(){
  Sacar(Verde)
  Mover(Sur)
  while(nroBolitas(Azul) <> 1){
    Sacar(Azul)
  }
  Mover(Norte)
}

procedure AbrirCompuertas(){
  Poner(Verde)
  Mover(Sur)
  while(nroBolitas(Azul) <> 3){
    Poner(Azul)
  }
  Mover(Norte)
}
function estaSucio(){
  Mover(Sur)
  return (hayBolitas(Negro))
}

function llueve(){
  return (nroBolitas(Azul) == 2)
}

function estaAbierta(){
  return (hayBolitas(Verde))
}

function estaCerrada(){
  return (not estaAbierta())
}

procedure Limpiar(){
  IrAlBorde(Sur)
  repeat(nroBolitas(Negro)){
    Sacar(Negro)
  }
}

